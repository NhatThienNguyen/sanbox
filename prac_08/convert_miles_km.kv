BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: ''
            on_text: app.handle_calculate()
            font_size: 48
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
                on_press: app.handle_calculate()
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
                on_press: app.handle_calculate()
#    Button:
#        text:"Convert miles to km"
#        on_press: app.handle_calculate()
    Label:
        id: output_label
        font_size: 48
        text: app.output_text
        color: (1, 1, 0, 1)
